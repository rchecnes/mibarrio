{% extends 'base.html.twig' %}

{% block body %}
    <h1>Menuxrol</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ menuXRol.id }}</td>
            </tr>
            <tr>
                <th>Condicion</th>
                <td>{% if menuXRol.condicion %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Fecha_creacion</th>
                <td>{{ menuXRol.fechacreacion }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('menuxrol_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('menuxrol_edit', { 'id': menuXRol.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
