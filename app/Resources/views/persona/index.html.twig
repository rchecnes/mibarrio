{% extends 'base.html.twig' %}

{% block body %}
    
    {%set message_success = app.session.flashbag.get('success')%}
    {% if message_success %}
        <div class="alert alert-success">
            <button class="close" data-dismiss="alert">
                <i class="ace-icon fa fa-times"></i>
            </button>
            {% for msg  in  message_success%}
                {{ msg}}
            {% endfor %}
        </div>
    {% endif %}

    <p class="group-new-botton">
        <a href="{{ path('persona_new') }}" class="btn btn-primary">Nuevo</a>
    </p>

    <div class="count">
        {{ pagination.getTotalItemCount }}
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Numero</th>
                <th>Dni</th>
                <th>Nombre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pagination %}
            <tr>
                <!--<td><a href="{{ path('persona_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>-->
                <td>{{ entity.numero }}</td>
                <td>{{ entity.dni }}</td>
                <td>{{ entity.nombre }}</td>
                <td>
                    <a href="{{ path('persona_show', { 'id': entity.id }) }}" title="Editar Asistencia">
                      <i class="fa fa-pencil-square-o bigger-200"></i>
                    </a>&nbsp;&nbsp;
                    <a href="{{ path('persona_edit', { 'id': entity.id }) }}" class="color-red" title="Registrar Asistencia">
                        <i class="fa fa-trash-o bigger-200"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>

{% endblock %}
