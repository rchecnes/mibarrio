{% extends 'base.html.twig' %}

{% block body %}

    <form method="post" action="{{ path('persona_sav')}}">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                {{form_label(form.dni)}}
                {{form_widget(form.dni) }}
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                {{form_label(form.nombre)}}
                {{form_widget(form.nombre) }}
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                {{form_label(form.apellido_paterno)}}
                {{form_widget(form.apellido_paterno) }}
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                {{form_label(form.apellido_materno)}}
                {{form_widget(form.apellido_materno) }}
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                {{form_label(form.estado_civil)}}
                {{form_widget(form.estado_civil) }}
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                {{form_label(form.lote)}}
                {{form_widget(form.lote) }}
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                {{form_label(form.cargo)}}
                {{form_widget(form.cargo) }}
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                {{form_label(form.numero)}}
                {{form_widget(form.numero) }}
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                {{form_label(form.es_dirigente)}}
                {{form_widget(form.es_dirigente) }}
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                {{form_label(form.estado)}}
                {{form_widget(form.estado) }}
            </div>
        </div>
        {{ form_widget(form._token) }}
        <input type="submit" value="Guardar" class="btn btn-success"/>
        <a href="{{ path('persona_index') }}" title="Editar Asistencia" class="btn btn-default">Cancelar</a>
    </form>
{% endblock %}
