{% extends 'base.html.twig' %}

{% block body %}
    
    <div class="count">
        {{ pagination.getTotalItemCount }}
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Numero</th>
                <th>Dni</th>
                <th>Nombre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pagination %}
            <tr>
                <!--<td><a href="{{ path('persona_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>-->
                <td>{{ entity.numero }}</td>
                <td>{{ entity.dni }}</td>
                <td>{{ entity.nombre }}</td>
                <td>
                    <a href="{{ path('persona_show', { 'id': entity.id }) }}" title="Editar Asistencia">
                      <i class="fa fa-pencil-square-o bigger-200"></i>
                    </a>
                    <a href="{{ path('persona_edit', { 'id': entity.id }) }}" title="Registrar Asistencia">
                        <i class="fa fa-trash-o bigger-200"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>

    <ul>
        <li>
            <a href="{{ path('persona_new') }}">Create a new persona</a>
        </li>
    </ul>
{% endblock %}
