{% extends 'base.html.twig' %}

{% block body %}
    <form method="post" action="{{ path('tipoactividad_edit', { 'id': id })}}">

        <div class="row">
            <div class=" cols col-lg-4 col-md-6 col-sm-6 col-xs-12">
                {{form_label(edit_form.nombre)}}
                {{form_widget(edit_form.nombre) }}
            </div>
            <div class=" cols col-lg-4 col-md-6 col-sm-6 col-xs-12">
                {{form_label(edit_form.tipo_tipo_actividad)}}
                {{form_widget(edit_form.tipo_tipo_actividad) }}
            </div>
            <div class=" cols col-lg-4 col-md-6 col-sm-6 col-xs-12">
                {{form_label(edit_form.descripcion)}}
                {{form_widget(edit_form.descripcion) }}
            </div>
            <div class=" cols col-lg-4 col-md-6 col-sm-6 col-xs-12">
                {{form_label(edit_form.activo)}}
                {{form_widget(edit_form.activo) }}
            </div>
        </div>
        {{ form_widget(edit_form._token) }}
        <input type="submit" value="Actualizar" class="btn btn-success">
        <a href="{{ path('tipoactividad_index') }}" class="btn btn-defaul">Cancelar</a>
    </form>
{% endblock %}
