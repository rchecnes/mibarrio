<form role="form" method="POST" name="evento" id="evento" action="#">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">{{titulo}}</h4>
    </div>
    <div class="modal-body">
      <div class="tabbable">
        <ul class="nav nav-tabs" id="myTab">
          <li class="active"><a data-toggle="tab" href="#inicio">Inicio</a></li>
          <li><a data-toggle="tab" href="#participante">Participante(s)</a></li>
        </ul>

      <div class="tab-content">
        <div id="inicio" class="tab-pane fade in active">
          <div class="row">
            <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
              <div class="form-group">
                <label for="tipo">Asunto</label>
                <input type="text" class="form-control align-left" id="asunto" name="asunto" required="required" placeholder="Asunto" value="{{evento.asunto}}">
              </div>
            </div>
            <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
                <div class="form-group">
                  <label for="tipo">Tipo de actividad:</label>
                  <input type="text" class="form-control" id="tipo_actividad" name="tipo_actividad" value="{{evento.tipoactividad.nombre}}">
                </div>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6" id="tipo_persona_grupo">
                <div class="form-group">
                    <label for="tipo">Tipo de persona:</label>
                    <div class="controls">
                      <label class="radio-inline">
                        <input type="radio" name="tipo_persona" id="tipo_persona_general" value="general" checked="checked">
                        General
                      </label>
                      <label class="radio-inline">
                        <input type="radio" name="tipo_persona" id="tipo_persona_dirigente" value="dirigente">
                        Dirigentes
                      </label>
                      <label class="radio-inline">
                        <input type="radio" name="tipo_persona" id="tipo_persona_seleccionar" value="seleccionar">
                        Seleccionar
                      </label>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6" id="grupo_molta_aporte">
              <div class="row">
                <div class="col-xs-4 col-sm-5 col-md-5 col-lg-5" id="grupo_existe_multa">
                  <div class="form-group">
                    <label for="tipo">¿Multa?:</label>
                    <div class="controls">
                      <label class="radio-inline">
                        <input type="radio" name="multa" id="multa_no" value="0" {%if evento.multa==0%}checked='checked'{%endif%}>
                        NO
                      </label>
                      <label class="radio-inline">
                        <input type="radio" name="multa" id="multa_si" value="1" {%if evento.multa==1%}checked='checked'{%endif%}>
                        SI
                      </label>
                    </div>
                  </div>
                </div>
                <div class="col-xs-8 col-sm-7 col-md-7 col-lg-7" id="grupo_multa_monto">
                  <div class="form-group">
                    <label for="tipo">Monto:</label>
                    <div class="input-group">
                        <div class="input-group-addon">
                           <i class="fa fa-money"></i>
                        </div>
                        <input type="text" class="form-control align-center" id="monto_multa" name="monto_multa" placeholder="0.00" value="{{evento.montomulta}}" autocomplete="off">
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div>
              <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
                  <div class="bootstrap-timepicker">
                      <div class="form-group">
                        <label for="hora_inicio">Hora Inicio:</label>
                        <div class="input-group">
                            <input type="text" class="form-control timepicker" id="hora_inicio" name="hora_inicio" placeholder="Hora Inicio" value="{{evento.horainicio |date('H:i:s')}}">
                            <div class="input-group-addon">
                               <i class="fa fa-clock-o"></i>
                            </div>
                        </div>
                      </div>
                  </div>
              </div>
              <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
                  <div class="bootstrap-timepicker">
                      <div class="form-group">
                        <label>Hora Fin:</label>
                        <div class="input-group">
                          <input type="text" class="form-control timepicker" name="hora_final" id="hora_final" placeholder="Hora Final" value="{{evento.horafinal |date('H:i:s')}}">
                          <div class="input-group-addon">
                            <i class="fa fa-clock-o"></i>
                          </div>
                        </div>
                      </div>
                    </div>
              </div>
              <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
                  <div class="form-group">
                      <label>Fecha Fin:</label>
                      <div class="input-group date">
                        <div class="input-group-addon">
                          <i class="fa fa-calendar"></i>
                        </div>
                        <input type="text" class="form-control pull-right date-picker" id="fecha_fin" name="fecha_fin" value="{{evento.fechafin |date('Y-m-d') }}">
                      </div>
                  </div>
              </div>
          </div>
          <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
              <div class="form-group">
                <label for="detalle">Detalles:</label>
                <textarea class="form-control" id="detalle" name="detalle" rows="4" placeholder="Escriba el detalle del evento">{{evento.descripcion}}</textarea>
            </div>
            </div>
          </div>
          
          <div class="form-group">
            <label for="detalle">Estado:</label>
            <input type="text" class="form-control" id="estado" name="estado" value="{{evento.estado.nombre}}">
          </div>
        </div>
        <div id="participante" class="tab-pane fade">
          <div class="row">
              <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <label>Buscar Persona:</label>
                <div class="form-group input-group">
                  <input type="text" class="form-control ui-autocomplete-input" id="bus_persona" name="bus_persona" placeholder="Buscar ..." autocomplete="off">
                  <span class="input-group-addon">
                    <img id="load_busper" src="{{asset('public/img/load.gif')}}" width="20" height="20" style="display: none">
                  </span>
                </div>
              </div>
          </div>
          <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
              <table class="table table-bordered" id="participantes">
                <tr>
                  <th>Nro.</th>
                  <th>Nombre</th>
                  <th>Resp.</th>
                </tr>
                {%set participantes = ''%}
                {% for parti in evento.eventoparticipante %}
                  <tr id="filapersona_{{parti.persona.id}}">
                    <td>{{parti.persona.numero}}</td>
                    <td>{{parti.persona.apellidopaterno}}&nbsp;{{parti.persona.apellidomaterno}},&nbsp;{{parti.persona.nombre}}</td>
                    <td>
                    {%if parti.responsable ==1%}
                      <input type="checkbox" id="perresp_{{parti.persona.id}}" name="perresp_{{parti.persona.id}}" checked="checked" disabled="disabled">
                    {%else%}
                      <input type="checkbox" id="perresp_{{parti.persona.id}}" name="perresp_{{parti.persona.id}}" disabled="disabled">
                    {%endif%} 
                    </td>
                  </tr>
                  {%if participantes == ''%}
                    {%set participantes = participantes~parti.persona.id %}
                  {%else%}
                    {%set participantes = participantes~'-'~parti.persona.id %}
                  {%endif%}
                  
                {%endfor%}
              </table>
              <input type="hidden" id="codigo_participantes" name="codigo_participantes" value="{{participantes}}">
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="modal-footer align-center">
        <button type="button" class="btn btn-default" data-dismiss="modal" id="cerrar">Cerrar</button>
  </div>
</form>
<script type="text/javascript">
  $(document).ready(function(){

    //Seleccionamos check y radios
    //$("#tipo_actividad").val("{{evento.tipoactividad.id}}");
    //$("#tipo_actividad").val("{{evento.tipoactividad.id}}");
    $("#tipo_persona_{{evento.tipopersona}}").prop("checked",true);
    //Bloquemaos todo
    $("#evento input[type='text']").attr("disabled","disabled");
    $("#evento select, #evento textarea").attr("disabled","disabled");
    $("#evento input[type='radio']").attr("disabled","disabled");
    
    getTipoTipoActividad = function(){

      //$("#tipo_actividad").attr("disabled", "disabled");

      var tipo_act = '{{evento.tipoactividad.id}}';

      $.ajax({
          type: 'GET',
          url: "{{path('evento_tipotipoactividad')}}",
          data: {tipo_actividad:tipo_act },
          dataType: "json",
          success: function( data ) {

              if (data.tip_nom_sis == 'tesoreria') {
                $("#tipo_persona_dirigente").attr("disabled","disabled");
                $("#tipo_persona_seleccionar").attr("disabled","disabled");
                $("#tipo_persona_general").prop("checked","checked");
                //Ocultamos si hay multa
                $("#grupo_existe_multa").hide();
                $("#grupo_multa_monto").show();
                //Cambiamos titulo multa
                //$("#grupo_multa_monto div>label").html("Monto Aportación:");
                $("#monto_multa").focus();
                //Actualizamos los css
                $("#tipo_persona_grupo").removeClass("col-xs-12 col-sm-6 col-md-6 col-lg-6");
                $("#tipo_persona_grupo").addClass("col-xs-12 col-sm-8 col-md-8 col-lg-8");

                $("#grupo_molta_aporte").removeClass("col-xs-12 col-sm-6 col-md-6 col-lg-6");
                $("#grupo_molta_aporte").addClass("col-xs-12 col-sm-4 col-md-4 col-lg-4");

                $("#grupo_multa_monto").removeClass("col-xs-8 col-sm-7 col-md-7 col-lg-7");
                $("#grupo_multa_monto").addClass("col-xs-12 col-sm-12 col-md-12 col-lg-12");
                
                
              }else{
                $("input[name='tipo_persona']").removeAttr("disabled");
                $("#tipo_persona_general").prop("checked","checked");
                //Mostrar si hay multa
                $("#grupo_existe_multa").show();
                //Cambiamos titulo multa
                //$("#grupo_multa_monto div>label").html("Monto de la multa:");
                //Activamos multa no
                var multa = '{{evento.multa}}';
                if (multa == 1) {
                  $("#grupo_multa_monto").show();
                  $("#multa_si").prop("checked",true);

                }else if(multa == 0){
                  $("#grupo_multa_monto").hide();
                  $("#multa_no").prop("checked",true);
                }
                //Actualizamos los css
                $("#tipo_persona_grupo").removeClass("col-xs-12 col-sm-8 col-md-8 col-lg-8");
                $("#tipo_persona_grupo").addClass("col-xs-12 col-sm-6 col-md-6 col-lg-6");

                $("#grupo_molta_aporte").removeClass("col-xs-12 col-sm-4 col-md-4 col-lg-4");
                $("#grupo_molta_aporte").addClass("col-xs-12 col-sm-6 col-md-6 col-lg-6");

                $("#grupo_multa_monto").removeClass("col-xs-12 col-sm-12 col-md-12 col-lg-12");
                $("#grupo_multa_monto").addClass("col-xs-8 col-sm-7 col-md-7 col-lg-7");
              }
          }
      });
    }

    getTipoTipoActividad();

    $("#tipo_actividad").on("change", function(){
      getTipoTipoActividad();
    });

  })
</script>