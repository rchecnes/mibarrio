{% extends 'base.html.twig' %}

{% block body %}
    <h1>Rol</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ rol.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ rol.nombre }}</td>
            </tr>
            <tr>
                <th>Condicion</th>
                <td>{% if rol.condicion %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('rol_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('rol_edit', { 'id': rol.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
